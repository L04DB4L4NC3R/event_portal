<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin</title>
</head>
<center>
    <body>
    <h1>Here are the teams admin</h1>
    <br>
    <div id="data"></div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    
    <script>
        $(document).ready(()=>{
            $.ajax({
                type:"GET",
                url:"/admin/view",
                headers:{"Authorization":localStorage.getItem("admin")},
                success:(data)=>{
                    if(data.message)
                        alert(data.message)
                    else{
                        for(let inf of data){
                            $("#data").append('<h2><strong style="color:red">'+inf.name+'</strong></h2> <br>');
                            for(let j of inf.ppl){
                                $("#data").append(j.name + "<br>" + j.email + "<br>" + j.phone + "<br><br><br>" )
                            }
                        }
                    }
                }
            })
        })
    </script>
    
</body>
</center>
</html>